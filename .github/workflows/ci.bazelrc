# Bazel settings to apply on CI only

# These options are applied with an explicit --bazelrc option in the call to bazel in
# .github/workflows/ci.yaml
#    bazel --bazelrc=.github/workflows/ci.bazelrc --bazelrc=.bazelrc <action> ...

build --announce_rc
test --test_output=errors
build --disk_cache=$HOME/.cache/bazel
build --repository_cache=$HOME/.cache/bazel-repo
test --test_env=XDG_CACHE_HOME
